<%= form_for(@thr) do |f| %>
  <%= f.hidden_field :vsummary, :value => 'przetagowanie' %>
  <div class="form-group">
    <div id="tags_preview"></div>
    <%= f.label :tagnames %>
    <%= f.text_field :tagnames,:id=>:tagit %>
  </div>
  <div class="form-group">
    <%= field_messages_for @thr %>
  </div>
  <div class="form-group">
    <%= f.submit :class=>"btn btn-success" %>
  </div>
<% end %>
